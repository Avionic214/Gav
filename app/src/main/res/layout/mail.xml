<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
		android:id="@+id/s1_but"
        android:text="S1"
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
		android:background="@drawable/kgs1"/>
	<Button
		android:id="@+id/s2_but"
        android:text="S2"
		android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
		android:background="@drawable/s2"
	/>
	<Button
		android:id="@+id/s3_but"
        android:text="S3"
		android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
		android:background="@drawable/s3"
	/>
	<Button
		android:id="@+id/s4_but"
        android:text="S4"
		android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
		android:background="@drawable/s4"
	/>
	<Button
		android:id="@+id/s5_but"
        android:text="S5"
		android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
		android:background="@drawable/s5"
	/>


</RelativeLayout>
